
a = 
p = 


# Tonelli-Shanks Algorithm

# step1: check QR
QR_check = pow(a, (p-1)//2, p)
print("QR(a/p) = %d"%QR_check)

# step2: p-1 = Q*2^s
Q = 0
s = 0
tmp = p - 1
while tmp % 2 == 0:
    s = s + 1
    tmp = tmp // 2
    Q = tmp

print("Q = %d, s = %d"%(Q, s))

# step3: find QNR
z = 2
while True:
    res = pow(z, (p-1)//2, p)
    if res == p-1:
        break
    z = z + 1

print("z: %d"%z)

# step4: calc M, c, t, R
M = s % p
c = pow(z, Q, p)
t = pow(a, Q ,p)
R = pow(a, (Q+1)//2, p)

print("M: %d, c: %d, t: %d, R: %d"%(M,c,t,R))


# step5: loop




b = 0
m = 0

while True:
    if t==0:
        print("ans: 0")
        break
    if t==1:
        print("ans: %d"%R)
        break
    
    for i in range(1, M):
        res = pow(t, 2**i, p)

        if res == 1:
            break
    
    b = pow(c, 2**(M-i-1), p)
    M = i % p
    c = b*b % p
    t = t * c % p
    R = R * b % p


    

